# Kyros Backend Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string (async driver)
DATABASE_URL=postgresql+asyncpg://kyros:kyros@localhost:5432/kyros

# Database pool settings
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# APPLICATION
# =============================================================================
# API prefix version
API_V1_STR=/api/v1

# Project name (shown in docs)
PROJECT_NAME=Kyros Backend

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# SECURITY (Optional - for future auth implementation)
# =============================================================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-in-production

# Access token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# LOGGING (Optional)
# =============================================================================
LOG_LEVEL=INFO
